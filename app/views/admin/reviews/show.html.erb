<div class="container">
  <div class= "row mt-3 ml-3">
    <h3><%= @device.name %>のレビュー</h3>
  </div>
  <div class="d-flex flex-row">
    <div>
      <%= attachment_image_tag @review, :image, size: '400x300' %>
    </div>
    <div>
      <table class="ml-5 table table-borderless">
        <tr>
          <th>タイトル</th>
          <td><%= @review.title %></td>
        </tr>
        <tr>
          <th>レビュー</th>
          <td class="text-wrap" style="width: 30rem;"><%= @review.comment %></td>
        </tr>
        <tr>
          <th><%= link_to "レビューを削除する", admin_device_review_path(@review.device.id, @review.id), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-danger motion" %></th>
        </tr>
      </table>
    </div>
  </div>
</div>

