<main class="mb-auto mt-5">
  <div class="container">
    <div class="row">
      <div class="col m-3">
        <h3>レビュー新規登録</h3>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto">
        <p class="font-weight-bold text-danger">※参考画像以外の項目が入力必須です</p>
        <%= form_with model: @review, url: device_reviews_path, local: true do |f| %>
        <table class="table table-borderless">
          <tr>
            <th>参考画像</th>
            <td><%= f.attachment_field :image %></td>
          </tr>
          <tr>
            <th>タイトル</th>
            <td><%= f.text_field :title, placeholder: "最も伝えたいポイントは何ですか？", size: "60" %></td>
          </tr>
          <tr>
            <th>レビュー</th>
            <td><%= f.text_area :comment, placeholder: "気に入ったこと/気に入らなかったことは何ですか？", size: "60x10" %></td>
          </tr>
          <tr>
            <th>評価</th>
            <td id="rating-form"><%= f.hidden_field :rate, :value => 'score' %></td>
            <script>
              $('#rating-form').empty()
              $('#rating-form').raty({
                starOn: "<%= asset_path('star-on.png') %>",
                starOff: "<%= asset_path('star-off.png') %>",
                scoreName: 'review[rate]'
              });
　　　　　　</script>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit "レビューを投稿する", class: "btn btn-success motion" %></td>
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</main>
