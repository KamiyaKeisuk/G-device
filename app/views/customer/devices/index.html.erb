<main class="mb-auto mt-5">
  <div class="container">
    <div class="row">
      <div class="col m-3">
        <h3>デバイス一覧</h3>
        <div class="d-flex flex-wrap">
          <% @devices.each do |device| %>
            <div class="p-4">
              <%= link_to device_path(device), class: "link" do %>
                <%= attachment_image_tag(device, :image, size: '200x150') %><br>
                <p class="text-wrap" style="width: 10rem;">
                  <%= device.name %>
                </p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<main>
<div class="mx-auto" style="width: 200px;">
  <%= paginate @devices %>
</div>
