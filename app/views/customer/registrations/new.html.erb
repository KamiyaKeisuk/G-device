<div class="container">
  <div class="row">
    <div class="col m-5">
      <h3 class="text-center mb-3">Sign up</h3>
      <div class="d-flex justify-content-center">
        <div class="p-3 bg-white text-dark rounded">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "customer/shared/error_messages", resource: resource %>
          <div>
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名(15文字以内)", size: 30 %>
          </div>
          <div>
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", size: 30 %>
          </div>
          <div>
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", size: 30 %>
          </div>
          <div>
            <%= f.label :password_確認用 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認のため2度入力してください", size: 30 %>
          </div>
          <div>
            <%= f.submit "Sign up", class: "btn btn-primary btn-sm mt-2 mb-2" %>
          </div>
          <div>
            ログインは<%= link_to "こちら", new_customer_session_path, class: "text-info" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
