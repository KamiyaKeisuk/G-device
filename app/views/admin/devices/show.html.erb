<main class="mb-auto mt-5">
  <div class="container">
    <div class= "row mt-3 ml-3">
      <h3>商品詳細</h3>
    </div>
    <div class="d-flex flex-row">
      <div>
        <%= attachment_image_tag @device, :image, size: '400x300' %>
      </div>
      <div>
        <table class="ml-5 table table-borderless">
          <tr>
            <th>商品名</th>
            <td><%= @device.name %></td>
          <tr>
            <th>商品説明</th>
            <td class="text-wrap" style="width: 30rem;"><%= @device.description %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @device.category.name %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @device.maker.name %></td>
          </tr>
          <tr>
            <th>参考価格</th>
            <td><%= @device.price.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <td><%= link_to "編集する", edit_admin_device_path(@device), class: "btn btn-success motion" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</main>