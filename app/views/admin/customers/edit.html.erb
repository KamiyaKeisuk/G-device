<div class="container">
  <div class="row">
    <div class="col m-3">
      <h3><%= @customer.name %>さんの会員詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="offset-md-1 col-md-5">
    <%= form_with model:@customer, url: admin_customer_path(@customer), local:true do |f|%>
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>ユーザー名</th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <%= f.radio_button :is_quited, false %>
            <%= f.label :is_quited, "有効" %>
            <%= f.radio_button :is_quited, true %>
            <%= f.label :is_quited, "退会" %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= f.submit "変更を保存", class: "btn btn-success motion" %>
          </td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
</div>
