<div class="container">
  <div class="row">
    <div class="col m-3">
      <h3>お問い合わせフォーム</h3>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <p class="font-weight-bold text-danger">※全ての項目が入力必須です</p>
      <%= form_with model: @contact, url: contacts_path, local: true do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>ユーザー名</th>
          <td><%= f.text_field :name, placeholder: "ユーザー名をご入力ください。", size: 40 %></td>
        </tr>
        <tr>
          <th>返信先メールアドレス</th>
          <td><%= f.text_field :email, placeholder: "返信先メールアドレスをご入力ください。", size: 40 %></td>
        </tr>
        <tr>
          <th>件名</th>
          <td><%= f.text_field :title, placeholder: "件名をご入力ください。", size: 40 %></td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td><%= f.text_area :message, placeholder: "お問い合わせの内容をご入力ください。", size: "60x10" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "送信", "data-confirm" => "送信内容は以下でよろしいでしょうか?", class: "btn btn-success motion" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
