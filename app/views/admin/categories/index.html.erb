<div class="container">
  <div class="row">
    <div class="col m-3">
      <h3>カテゴリー追加・一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <div class="mb-3">
        <%= form_with model: @category, url: admin_categories_path, local:true do |f| %>
          <%= f.label:"カテゴリー名" %>
          <%= f.text_field :name, placeholder: "カテゴリー名" %>
          <%= f.submit "新規登録", class: "btn btn-success motion ml-5" %>
        <% end %>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>カテゴリー</th>
            <th></th>
          </tr>
        </thead>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= link_to "編集する", edit_admin_category_path(category.id), class: "btn btn-success motion ml-5" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
