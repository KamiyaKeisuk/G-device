<div class="container">
  <div class="row">
    <div class="col m-3">
      <h3>会員一覧</h3>
    </div>
    <table class="table table-inverse">
      <thead class="table-color">
        <tr>
          <th scope="col">会員ID</th>
          <th scope="col">ユーザー名</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.name, admin_customer_path(customer), class: "link" %></td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_quited == false %>
                <div class="text-success">有効</div>
              <% else %>
                <div class="text-secondary">退会</div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="mx-auto" style="width: 200px;">
  <%= paginate @customers %>
</div>