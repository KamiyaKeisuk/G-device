<div class="container">
  <div class="row">
    <div class="col m-3">
      <h3>デバイス一覧</h3>
      <div class="d-flex flex-wrap justify-content-around">
        <% @devices.each do |device| %>
          <div class="card p-2 m-4">
            <%= link_to device_path(device), class: "link" do %>
              <%= attachment_image_tag(device, :image, size: '200x150') %><br>
              <p class="text-wrap" style="width: 10rem;">
                <%= device.name %>
              </p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="mx-auto" style="width: 200px;">
  <%= paginate @devices %>
</div>
