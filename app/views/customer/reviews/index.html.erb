<div class="container">
  <div class="row">
    <div class="col m-3">
      <h3>レビュー一覧</h3>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">デバイス名</th>
          <th scope="col">レビュータイトル</th>
          <th scope="col">投稿日時</th>
        </tr>
      </thead>
      <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td><%= link_to review.device.name, device_path(review.device.id), class: "text-info" %></td>
            <td><%= link_to review.title, device_review_path(review.device.id, review.id), class: "text-info" %></td>
            <td><%= review.created_at.strftime("%Y/%m/%d") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="d-flex justify-content-around">
  <%= paginate @reviews %>
</div>
